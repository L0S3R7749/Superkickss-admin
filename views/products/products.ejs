<!--body-->
<div class="col-md-12">
    <div class="row">
        <div class="col-12">
            <h2 class="page-title">Product List</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7">

            <div class="search-product">
                <label class="search-label" for="form1">Search</label>
                <input type="search" id="form1" class="" />
                <button type="button" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </div>

        </div>
        <div class="col-md-5">
            <a href="/product-detail/add-product" class="btn btn-text-secondary float-right">CREATE A NEW
                PRODUCT</a>
        </div>
    </div>
    <div class="row mb-5">
        <%- include('_show')%>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="page-index">
                <ul>
                    <!-- <li><a href="#">
                            <</a> </li> <li class="active"><a href="#"><span>1</span></a></li>
                    <li><a href="#"><span>2</span></a></li>
                    <li><a href="#"><span>3</span></a></li>
                    <li><a href="#"><span>4</span></a></li>
                    <li><a href="#"><span>5</span></a></li>
                    <li><a href="#"><span>></span></a></li> -->
                    <% if(pages > 0) { %>
                    <nav class="mx-auto">
                        <ul class="pagination" style="margin-top: 2rem;">

                            <!-- FIRST ITEM -->
                            <% if(current == 1) { %>
                            <li class="disabled">
                                <a href="#">
                                    <span>FP</span>
                                </a>
                            </li>
                            <li class="disabled">
                                <a href="#">
                                    <span>&lt;</span>
                                </a>
                            </li>
                            <% } else { %>
                            <li>
                                <a href="/products?page=1">
                                    <span>FP</span>
                                </a>
                            </li>
                            <li>
                                <a href="/products?page=<%= Number(current)-Number(1)%>">
                                    <span>&lt;</span>
                                </a>
                            </li>
                            <% } %>

                            <!-- ITEMS  -->
                            <% var i = (Number(current) > 3 ? Number(current) - 2 : 1) %>
                                <% if(i !== 1) { %>
                                <li class="disabled">
                                    <a href="#"><span>...</span></a>
                                </li>
                                <% } %>
                                <% for(; i <= (Number(current) + 2) && i <= pages; i++) { %>
                                <% if(i == current) { %>
                                <li class="disabled">
                                    <a href="#">
                                        <span><%= i %></span>
                                    </a>
                                </li>
                                <% } else { %>
                                <li >
                                    <a href="/products?page=<%= i %>">
                                        <span><%= i %></span>
                                    </a>
                                </li>
                                <% } %>
                                <% if (i == Number(current) + 2 && i < pages) { %>
                                <li class="disabled">
                                    <a href="#"><span>...</span></a>
                                </li>
                                <% } %>
                                <% } %>

                                <!-- LAST ITEM -->
                                <% if(current == pages) { %>
                                <li class="disabled">
                                    <a href="#">
                                        <span>&gt;</span>
                                    </a>
                                </li>
                                <li class="disabled">
                                    <a href="#">
                                        <span>LP</span>
                                    </a>
                                </li>
                                <% } else { %>
                                <li class="disabled">
                                    <a href="/products?page=<%= Number(current)+Number(1)%>">
                                        <span>&gt;</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/products?page=<%= pages %>">
                                        <span>LP</span>
                                    </a>
                                </li>
                                <% } %>
                        </ul>
                    </nav>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>
</div>
<!--/body-->
<div class="container">
    <div class="col-md-12">
        <div class="row p-4">
                <div class="col-md-4 col-sm-2 mb-5>
                    <h5 class="mb-3">Avatar </h5>
                    <div class="box mb-5">
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="col-md-12 row">
                        <div class="col-md-6">
                            <h5>Full name</h5>
                            <div type="text" name="fullname" id="fullname"><%=user.fullname%></div>
                        </div>
                        <div class="col-md-6">
                            <h5>Username</h5>
                            <div type="text" name="userName" id="userName"><%=user.username%></div>
                        </div>
                    </div>
                    <div class="col-md-12 row">
                        <div class="col-md-6">
                            <h5>Email</h5>
                        <div type="email" name="email" id="email"><%=user.email%></div>
                        </div>
                        <div class="col-md-6">
                            <h5>Phone number</h5>
                        <div type="text" name="phone" id="phone"><%=user.phoneNumber%></div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <h5>Address</h5>
                        <div type="text" name="address" id="address"><%=user.address%></div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-5 d-flex justify-content-center">
                <button class="mb-5" type="submit"><%= option%></button>                
            </div>
        </div>
    </div>
</div>